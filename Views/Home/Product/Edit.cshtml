@model ProiectAnaliza.Models.ProductManagerViewModel

@{
    ViewBag.Title = "Edit";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styleAppointmentCreate.css" media="screen" />
</head>
<div id="container">
    
    <div id="body_header">
        
        <br />
    </div>
    <div class="formular">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Product.Id)

            <div>
                <img src="~/Content/ProductImages/@Model.Product.Image" height="200px" class="poza" />
            </div>
            <br />




            <label>Nume produs</label>

            @Html.EditorFor(model => model.Product.Name)
            @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })

            <br />
            <br />

            <label>Descriere</label>

            @Html.EditorFor(model => model.Product.Description)
            @Html.ValidationMessageFor(model => model.Product.Description, "", new { @class = "text-danger" })

            <br />
            <br />

            <label>Preț</label>

            @Html.EditorFor(model => model.Product.Price)
            @Html.ValidationMessageFor(model => model.Product.Price, "", new { @class = "text-danger" })

            <br />
            <br />

            <label>Categorie</label>

            @Html.DropDownListFor(model => model.Product.Category, new SelectList(Model.ProductCategories, "Category", "Category"), new { htmlAtributes = new { @class = "form-control" } })



            @Html.LabelFor(model => model.Product.Image)

            <input type="file" id="file" name="file" class="form-control" />

            <br />


            <button type="submit" value="Save">Editează</button>




        }
        <button onclick="location.href='/Product/Index'" class="inapoi">Înapoi</button>
    </div>
</div>

