@model IEnumerable<ProiectAnaliza.Models.Administration>

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styleAdministration.css" media="screen" />
</head>

<div class="centru">
    <h2 id="titluCateg">Administrare ore de lucru</h2>

    <img src="~/Content/Images/bubble-gum-business-man-checks-calendar.PNG" />
</div>
    <table class="table">
        <tr>
            <th>
                Descriere
            </th>
            <th>
                Valoare
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink("Editează", "Edit", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
