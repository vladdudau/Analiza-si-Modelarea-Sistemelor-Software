@model ProiectAnaliza.Models.Appointment



<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styleAppointmentDetails.css" media="screen" />
</head>

<div class="card">
    <nav>
        <svg class="arrow" version="1.1" viewBox="0 0 512 512" width="512px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><polygon points="352,115.4 331.3,96 160,256 331.3,416 352,396.7 201.5,256 " stroke="#727272" /></svg>
        
            <a href="javascript:void(0);" onclick="history.go(-1);">Inapoi la lista cu programari</a>

    </nav>
    <div class="photo">
        <img src="~/Files/@Model.Coach.FileName" alt="@Model.Coach.FileName" />
    </div>
    <div class="description">
        <h2>Coach: @Html.DisplayFor(model => model.Coach.Name)</h2>
        <br />
        <h4>Cursant:  @Html.DisplayFor(model => model.Customer.Email)</h4>
        <h1>Data:  @Html.DisplayFor(model => model.Date)</h1>
        <p> Ora : @Html.DisplayFor(model => model.Time)</p>
        @if (User.IsInRole("User") && (Model.Date.Date.Add(Model.Time.TimeOfDay).CompareTo(DateTime.Now) >= 0))
        {<button onclick="location.href='/Appointment/Edit/@Model.AppointmentId'">Editează</button>}        
        @if (User.IsInRole("Admin") == false)
        {
            <button onclick="location.href='/Appointment/Delete/@Model.AppointmentId'">Șterge</button>
        }

    </div>
</div>